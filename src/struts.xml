<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 设置上传文件的总大小，默认是2M  struts.multipart.maxSize=2097152 -->
	<!-- <constant name="struts.multipart.maxSize" value="20971520"/> -->
	
	<package name="JavaForum" namespace="/" extends="struts-default">
		<action name="user_*" class="userAction" method="{1}">
			<result name="login" type="redirect">/login.jsp</result>
			<result name="index" type="redirect">/index.jsp</result>
			<result name="home" type="redirect">/u/home.jsp</result>
			<result name="updateInfo" type="redirect">/u/updateInfo.jsp</result>
			<result name="news" type="redirect">/u/news.jsp</result>
		</action>
	
	</package>
	
</struts>













